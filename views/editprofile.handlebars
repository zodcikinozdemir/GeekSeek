      </ul>  

  </div>

<div class = "container">

{{!-- choose rankings on skills --}}
  <div class="col-sm-9 col-sm-offset-3 col-md-14 col-md-offset-2 main">
   <div class="table-responsive">
       <table class="table table-striped">
          <thead>
            <tr>
              <th>UserId</th>           
              <th>ZipCode</th>
            </tr>
          </thead>
      <tbody>
      <tr><td>{{profile.username}}</td><td>{{profile.zipcode}}</td></tr>
      </tbody>
      </table>
    <form method="POST" action="/geek/update" class="form-editprofile">
      <label for="html">HTML: </label>
      <input type="text" id="html" name="html" class="form-control" value={{profile.html}} required autofocus width="200">
      <label for="css">CSS: </label>
      <input type="text" id="css" name="css" class="form-control" value={{profile.css}} required autofocus width="200">
      <label for="js">Javascript: </label>
      <input type="text" id="js" name="js" class="form-control" value={{profile.javascript}} required autofocus width="200">
      <label for="sql">MySQL: </label>
      <input type="text" id="sql" name="sql" class="form-control" value={{profile.mysql}} required autofocus width="200">
      <label for="node">Node: </label>
      <input type="text" id="node" name="node" class="form-control" value={{profile.node}} required autofocus width="200">
      <br>
      <br>
      <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
</form>  
</div>
